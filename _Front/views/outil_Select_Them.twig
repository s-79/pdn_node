{% include 'header2.html' %}

    <div class="container-fluid" style="margin-top: 7em !important;">

        {% if not classer[0].nom %}
            <h1 class="orange fw-bold pb-2 my-4 border-bottom border-4">Il n'y a pas encore de thématique liée à cette ressource</h1>
        {% else %}
            <h1 class="orange fw-bold pb-2 my-4 border-bottom border-4">Modifier les thématiques liées à "{{ classer[0].nom }}" ? </h1>
        {% endif %}

        <table class="table table-striped">
            <tbody>
                {% for association in classer %}
                    <form class="" action="/delete/{{ association.id_thematique }}" method="post">
                        <tr style="cursor: pointer">
                            <input type="hidden" name="id" value="{{ classer[0].id }}">
                            <td><button type="submit" class="btn btn-outline-danger me-4"><i class="far fa-trash-alt"></i></button>{{ association.nom_thematique }}</td>
                        </tr>
                    </form>
                {% endfor %}
            </tbody>
        </table>

        <div class="form-group d-flex justify-content-center mx-3 mt-4 pt-3">
            <button class="btn btn-primary mx-3" onclick="document.location='/outil_Select'">Conserver les thématiques</button>
            <button class="btn btn-warning mx-3" onclick="document.location='/outil_Update_Them/'+{{ classer[0].id }}">Ajouter des thématiques</button>
        </div>

    </div>
</body>
</html>
