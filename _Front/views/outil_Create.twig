{% include 'header.html' %}

<div class="container-fluid" style="margin-top: 7em !important;">

    <h1 class="orange fw-bold pb-2 my-4 border-bottom border-4">Ajouter une ressource</h1>

    <form action="" method="post">

        <div class="row">

            <div class="col-12 col-lg-6 col-xl-4">
                <div class="m-3 py-4 px-3 rounded rounded-3 bg-bleu">
                    <div class="form-floating mx-3 mt-3">
                        <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom de la ressource">
                        <label for="nom">Nom de la ressource</label>
                    </div>
                    <div class="form-floating mx-3 mt-3">
                        <textarea class="form-control" placeholder="Description" id="description" name="description" style="height:150px;"></textarea>
                        <label for="description">Description</label>
                    </div>
                    <div class="form-floating mx-3 mt-3">
                        <input type="text" class="form-control" id="age" name="age" placeholder="Age du public">
                        <label for="age">Age du public</label>
                    </div>
                    <div class="mx-3 mt-4">
                        <div class="form-check form-switch pt-1">
                          <input class="form-check-input" type="checkbox" id="valide" name="valide">
                          <label class="form-check-label text-warning fw-bold" for="valide">Valider la ressource</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6 col-xl-4">
                <div class="m-3 py-4 px-3 rounded rounded-3 bg-bleu">
                    {% for i in [1, 2, 3, 4, 5] %}
                        <div class="form-floating mx-3 mt-3">
                            <select class="form-select" id="thematique{{ i }}" name="thematique{{ i }}" aria-label="Thématique {{ i }}">
                                <option selected value="">Séléctionner une thématique</option>
                                {% for them in thematiques %}
                                    <option value="{{ them.id }}">{{ them.nom }}</option>
                                {% endfor %}
                            </select>
                            <label for="thematique {{ i }}">Thématique {{ i }}</label>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="col-12 col-lg-6 col-xl-4">
                <div class="m-3 py-4 px-3 rounded rounded-3 bg-bleu">
                    <div class="form-floating mx-3 mt-3">
                        <input type="text" class="form-control" id="image" name="image" placeholder="Lien vers l'image">
                        <label for="image">Lien vers l'image</label>
                    </div>
                    <div class="form-floating mx-3 mt-3">
                        <input type="text" class="form-control" id="fichier" name="fichier" placeholder="Lien vers un fichier ressource">
                        <label for="fichier">Lien vers un fichier ressource</label>
                    </div>
                    <div class="form-floating mx-3 mt-3">
                        <input type="text" class="form-control" id="nom_editeur" name="nom_editeur" placeholder="Nom de l'éditeur">
                        <label for="nom_editeur">Nom de l'éditeur</label>
                    </div>
                    <div class="form-floating mx-3 mt-3">
                        <input type="text" class="form-control" id="site_editeur" name="site_editeur" placeholder="Site de l'éditeur">
                        <label for="site_editeur">Site de l'éditeur</label>
                    </div>
                    <div class="form-group d-flex justify-content-center mx-3 mt-4 pt-3">
                        <button type="submit" class="btn btn-warning">Ajouter la ressource</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
</body>
</html>
